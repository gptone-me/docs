{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "GPTOne Doc",
  "colors": {
    "primary": "#2C5D63",
    "light": "#408891",
    "dark": "#283739"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://gptone.mintlify.app/",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://gptone.me/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/gptone-dark.png",
    "dark": "/logo/gptone-light.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@gptone.me"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://gptone.me/dashboard"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/gptone",
      "github": "https://github.com/gptone",
      "linkedin": "https://linkedin.com/company/gptone"
    }
  }
}
